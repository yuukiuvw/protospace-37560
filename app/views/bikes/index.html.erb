<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        ヤエー！
        <%= link_to "#{current_user.name}さん", user_path(current_user), class: :greeting__link%>
      </div>
    <% end %>
    <div class="card__wrapper">
      <%= render partial: 'bike', collection: @bikes %>
    </div>
  </div>
</main>
