<main class="main">
  <div class="inner">
    <div class="bikespace__wrapper">
      <p class="bikespace__hedding">
        <%= @bike.title %>
      </p>
      <%= link_to "by #{@bike.user.name}", user_path(@bike.user), class: :bikespace__user %>
      <% if current_user == @bike.user%>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_prototype_path(@bike), class: :bikespace__btn %>
          <%= link_to "削除する", prototype_path(@bike), method: :delete, class: :bikespace__btn %>
        </div>
      <% end %>
      <div class="bikespace__image">
        <%= image_tag @bike.image %>
      </div>
      <div class="bikespace__body">
        <div class="bikespace__detail">
          <p class="detail__title">キャッチコピー</p>
          <p class="detail__message">
            <%= @bike.catch_copy %>
          </p>
        </div>
        <div class="bikespace__detail">
          <p class="detail__title">コンセプト</p>
          <p class="detail__message">
            <%= @bike.concept %>
          </p>
        </div>
      </div>
      <div class="bikespace__comments">
        <% if user_signed_in? %>
          <%= form_with model: [@bike, @comment], local: true do |f|%>
            <div class="field">
              <%= f.label :content, "コメント" %><br />
              <%= f.text_field :content, id:"comment_content" %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %>
        <% end %>
        <ul class="comments_lists">
          <% @comments.each do |comment| %>
            <li class="comments_list">
              <%= comment.content%>
              <%= link_to "（#{comment.user.name}）", user_path(comment.user), class: :comment_user %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>